{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT", "**/.env*"],
      "cache": false,
      "env": [
        "NODE_ENV",
        "JWT_ACCESS_TOKEN_SECRET",
        "JWT_REFRESH_TOKEN_SECRET",
        "JWT_ACCESS_TOKEN_EXPIRE",
        "JWT_REFRESH_TOKEN_EXPIRE",
        "ADMIN_USERNAME",
        "ADMIN_PASSWORD",
        "MONGODB_URI",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "AWS_BUCKET_NAME",
        "PREDICT_URL",
        "SENDGRID_SENDER",
        "SENDGRID_API_KEY",
        "PREDICT_API_URL",
        "NEXT_PUBLIC_API_URL"
      ],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {},
    "prisma:generate": {
      "dependsOn": ["^prisma:generate"]
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["^db:push"]
    }
  }
}
